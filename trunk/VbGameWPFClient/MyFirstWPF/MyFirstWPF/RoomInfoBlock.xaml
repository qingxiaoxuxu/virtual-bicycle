<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="MyFirstWPF.RoomInfoBlock"
	x:Name="UserControl" Height="120" Width="500">
	<Grid x:Name="LayoutRoot">
		<Grid.Background>
			<ImageBrush Stretch="Fill" ImageSource="Contents\Images\bgButton.png"/>
		</Grid.Background>
        <Label Margin="15,10,0,0" Name="RoomName"
                FontSize="20pt" FontFamily="微软雅黑" 
				Height="45" VerticalAlignment="Top" HorizontalAlignment="Left" Width="470"/>
        <Label Margin="15,0,0,10" Name="RoomMap"
			FontSize="20pt" FontFamily="微软雅黑" 
			VerticalAlignment="Bottom" Height="45" Width="300" HorizontalAlignment="Left"/>
        <Label Margin="0,0,15,10" x:Name="PeopleLabel"
        	FontSize="20pt" FontFamily="微软雅黑" HorizontalContentAlignment="Right"
        	VerticalAlignment="Bottom" Height="45" Width="160" HorizontalAlignment="Right"/>
    </Grid>
</UserControl>